<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616060"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.auth.LoginScreenFragment">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="326dp"
        android:layout_height="552dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="170dp"
        app:cardBackgroundColor="#2E2E2E"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/t_email"
                android:layout_width="213dp"
                android:layout_height="52dp"
                android:background="@drawable/rounded_corner"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:padding="12dp"
                android:hint="Email"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13" />

            <EditText
                android:id="@+id/t_padssword"
                android:layout_width="216dp"
                android:layout_height="58dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/t_email"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/t_email"
                app:layout_constraintTop_toBottomOf="@+id/t_email" />

            <Button
                android:id="@+id/b_login"
                android:layout_width="193dp"
                android:layout_height="59dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corner"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="@+id/t_padssword"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="@+id/t_padssword"
                app:layout_constraintTop_toBottomOf="@+id/t_padssword" />

            <TextView
                android:id="@+id/t_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Aun no tienes cuenta? Crea una!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="126dp"
                android:layout_height="119dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>